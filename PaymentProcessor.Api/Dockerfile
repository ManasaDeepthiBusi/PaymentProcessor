# Build stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy csproj files and restore
COPY PaymentProcessor.Api/PaymentProcessor.Api.csproj PaymentProcessor.Api/
COPY PaymentProcessor.Tests/PaymentProcessor.Tests.csproj PaymentProcessor.Tests/
RUN dotnet restore PaymentProcessor.Api/PaymentProcessor.Api.csproj

# Copy the rest of the source and publish
COPY . .
RUN dotnet publish PaymentProcessor.Api/PaymentProcessor.Api.csproj -c Release -o /app/publish /p:UseAppHost=false

# Runtime stage
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
EXPOSE 8080
ENV ASPNETCORE_URLS=http://+:8080
COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "PaymentProcessor.Api.dll"]
